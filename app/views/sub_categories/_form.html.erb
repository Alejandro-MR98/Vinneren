<%= form_with(model: sub_category) do |form| %>
  <% if sub_category.errors.any? %>
    <div style="color: red">
      <ul>
        <% sub_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Número, style: "display: block" %>
    <%= form.text_field :number, class:"col-4" %>
  </div>

  <div>
    <%= form.label :Nombre, style: "display: block" %>
    <%= form.text_field :name, class:"col-4" %>
  </div>

  <div>
    <%= form.label :Categoría, style: "display: block" %>
    <%= form.collection_select :category_id, Category.all.order(number: :asc), :id, :name %>
  </div>
  <br>
  <div>
    <%= form.submit "Guardar", class: "btn btn-success"%>
  </div>
<% end %>
