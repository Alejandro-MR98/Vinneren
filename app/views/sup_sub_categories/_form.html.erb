<%= form_with(model: sup_sub_category) do |form| %>
  <% if sup_sub_category.errors.any? %>
    <div style="color: red">
      <ul>
        <% sup_sub_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Número, style: "display: block" %>
    <%= form.text_field :number, class:"col-4"  %>
  </div>

  <div>
    <%= form.label :Nombre, style: "display: block" %>
    <%= form.text_field :name, class:"col-4"  %>
  </div>

  <div>
    <%= form.label :sub_categoría, style: "display: block" %>
    <%= form.collection_select :sub_category_id, SubCategory.all.order(number: :asc), :id, :name %>
  </div>

  <div>
    <%= form.submit "Guardar", class: "btn btn-success"%>
  </div>
<% end %>
